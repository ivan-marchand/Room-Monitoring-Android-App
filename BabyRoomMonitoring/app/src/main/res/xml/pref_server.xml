<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_server"
        android:key="pref_key_server_settings">
        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <EditTextPreference
            android:key="server_host"
            android:title="@string/pref_title_server_host"
            android:selectAllOnFocus="true"
            android:inputType="textUri"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="server_port"
            android:title="@string/pref_title_server_port"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="server_user"
            android:title="@string/pref_title_server_user"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="server_password"
            android:title="@string/pref_title_server_password"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

    </PreferenceCategory>
</PreferenceScreen>
