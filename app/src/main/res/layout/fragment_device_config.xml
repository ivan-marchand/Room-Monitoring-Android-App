<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    tools:context="marchandivan.RoomMonitoring.fragment.DeviceConfigFragment">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/gray">
        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:src="@drawable/thermometer"/>
        <TextView
            android:id="@+id/device_name"
            android:text="@string/device_name_place_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/device_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <ImageButton
            android:id="@+id/remove_device"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/edit_device"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_remove"/>
        <ImageButton
            android:id="@+id/edit_device"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="7"
        android:id="@+id/sensor_list"
        android:background="@color/white"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
