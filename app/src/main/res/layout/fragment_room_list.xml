<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="marchandivan.RoomMonitoring.RoomListFragment">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/room_name"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/thermometer"/>
        <TextView
            android:id="@+id/temperature"
            android:text="--.- F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/humidity"/>
        <TextView
            android:id="@+id/humidity"
            android:text="--.- %"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC on/off"
            android:id="@+id/IRButton_ONOFF"
            android:layout_gravity="center_horizontal"
            android:onClick="sendIRCommand" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp +"
            android:id="@+id/IRButton_TEMPPLUS"
            android:layout_gravity="center_horizontal"
            android:onClick="sendIRCommand" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp -"
            android:id="@+id/IRButton_TEMPMINUS"
            android:layout_gravity="center_horizontal"
            android:onClick="sendIRCommand" />
    </TableRow>
</TableLayout>

</RelativeLayout>
